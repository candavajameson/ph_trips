= form_for [:admin, @hotel] , html: { class: 'form-horizontal' } do |f|
	= render 'shared/error_messages', :object => f.object
	.row
		.col-md-12
			.form-group
				= f.label :name, class: 'control-label'
				.col-sm-8
					= f.text_field :name, class: 'form-control'
			.form-group
				= f.label :address, class: 'control-label'
				.col-sm-8
					= f.text_area :address, class: 'form-control'
			.form-group
				= f.label :destination, class: 'control-label'
				.col-sm-8
					= f.collection_select(:destination_id, Destination.all, :id, :name, {}, { class: 'form-control' })
			.form-group
				= f.label :banner, class: 'control-label'
				.col-sm-8
					= image_tag @hotel.banner_url if @hotel.banner?	
					= f.file_field :banner, class: 'form-control'
	.form-actions
		= f.submit 'Save', class: 'btn btn-large btn-success'
