%h1 Categories
%hr

.container
	.pull-right
		= link_to "New", new_admin_category_path, class: 'btn btn-success'

%table.table.table-striped
	%thead
		%tr
			%th Name
			%th 
	%tbody
		- @categories.each do |category|
			%tr
				%td= category.name
				%td= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-success'
%hr
= paginate @categories
= page_entries_info @categories
	